<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ingreso">

    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:textAllCaps="true"
        android:textColor="#959595"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvDescripcion"
        app:layout_constraintStart_toStartOf="@+id/tvDescripcion"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#959595"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etNombre"
        app:layout_constraintEnd_toEndOf="@+id/etNombre"
        app:layout_constraintStart_toStartOf="@+id/etNombre"
        app:layout_constraintTop_toBottomOf="@+id/bienvenida"
        tools:text="debes ingresar algunos datos" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etEstadoCivil"
        app:layout_constraintEnd_toEndOf="@+id/etEstadoCivil"
        app:layout_constraintStart_toStartOf="@+id/etEstadoCivil"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etApellido"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etEstadoCivil"
        app:layout_constraintEnd_toEndOf="@+id/etEstadoCivil"
        app:layout_constraintStart_toStartOf="@+id/etEstadoCivil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.702" />

    <EditText
        android:id="@+id/etEdad"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:hint="Edad"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/etEstadoCivil"
        app:layout_constraintEnd_toEndOf="@+id/etEstadoCivil"
        app:layout_constraintStart_toStartOf="@+id/etEstadoCivil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913" />

    <EditText
        android:id="@+id/etEstadoCivil"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:hint="Estado civil"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.928"/>


    <TextView
        android:id="@+id/tvMostrarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#959595"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvMostrarApellido"
        app:layout_constraintEnd_toEndOf="@+id/tvMostrarApellido"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="@+id/tvMostrarApellido"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.771"
        tools:text="JUAN" />

    <TextView
        android:id="@+id/tvMostrarApellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#959595"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvMostrarEdad"
        app:layout_constraintEnd_toEndOf="@+id/tvMostrarEdad"
        app:layout_constraintStart_toStartOf="@+id/tvMostrarEdad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.811"
        tools:text="PEREZ" />

    <TextView
        android:id="@+id/tvMostrarEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#959595"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvMostrarEstadoCivil"
        app:layout_constraintEnd_toEndOf="@+id/tvMostrarEstadoCivil"
        app:layout_constraintStart_toStartOf="@+id/tvMostrarEstadoCivil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.869"
        tools:text="18" />

    <TextView
        android:id="@+id/tvMostrarEstadoCivil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="#959595"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="@+id/btnSave"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/btnSave"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913"
        tools:text="Soltero" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        app:cornerRadius="30dp"
        app:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btnLoggout"
        app:layout_constraintEnd_toEndOf="@+id/btnLoggout"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnLoggout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.975" />

    <Button
        android:id="@+id/btnLoggout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesion"
        app:cornerRadius="30dp"
        app:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.953" />


</androidx.constraintlayout.widget.ConstraintLayout>